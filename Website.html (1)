<script type="text/javascript" id="dcoder_script">// script.js
document.addEventListener("DOMContentLoaded", function() {
    const buttons = document.querySelectorAll('.btn');
    const greeting = document.getElementById('greeting');
    
    // رسالة ترحيبية عند تحميل الصفحة
    greeting.innerHTML = "مرحباً بك في موقعي!";

    // تغيير النص عند النقر على الأزرار
    buttons.forEach(button => {
        button.addEventListener('click', () => {
            greeting.innerHTML = `قمت بالنقر على ${button.textContent}!`;
            setTimeout(() => {
                greeting.innerHTML = "مرحباً بك في موقعي!";
            }, 3000);
        });
    });
});</script></body></html>